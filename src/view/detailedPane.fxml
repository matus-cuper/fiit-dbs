    <TableView fx:id="registrationsTableView" layoutX="15.0" layoutY="510.0" prefHeight="90.0" prefWidth="970.0">
      <columns>
          <TableColumn fx:id="registrationUniversityColumn" prefWidth="300.0" text="University"/>
          <TableColumn fx:id="registrationAddressColumn" prefWidth="150.0" text="Address"/>
          <TableColumn fx:id="registrationFieldOfStudyColumn" prefWidth="190.0" text="Field of study"/>
          <TableColumn fx:id="registrationChangedAtColumn" style="-fx-alignment: CENTER" prefWidth="190.0" text="Changed at"/>
          <TableColumn fx:id="registrationStatusColumn" style="-fx-alignment: CENTER" prefWidth="120.0" text="Status"/>
      </columns>
    </TableView>
</Pane>
